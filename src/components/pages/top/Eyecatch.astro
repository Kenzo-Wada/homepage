---
import MouseImage from "../../../../public/mouse.svg"
import ChevronDownImage from "../../../../public/chevron-down.svg"
import {Image} from "astro:assets"
---

<article>
  <div class="wrapper">
    <div class="title">
      <h1>Kenzo Wada</h1>
      <div class="description">
        <span class="beer">Beer Junkie</span><span> Modern Frontend Enginner</span>
      </div>
    </div>
    <div class={'scroll'}>
      <span class="scroll-text">scroll down</span>
      <Image src={MouseImage} height={36} width={36} alt="mouse" loading="eager" />
      <Image src={ChevronDownImage} height={24} width={24} alt="down" loading="eager" />
    </div>
  </div>
</article>
<style lang="scss">
  article {
    display: flex;
    justify-content: center;
    align-items: center;
    height: calc(100vh - 120px);
  }
  .title {
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100%;
    
  }
  h1 {
    font-size: 10em;
    margin: 0;
    color: #202124
  }
  .description {
    font-size: 5em;
    font-weight: bold;
    color: #202124;
    padding: 1em 0;
  }
  .beer {
    background-image: url(handdraw-circle.svg);
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
  }
  .wrapper {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
  }
  .scroll {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0;
    animation: floating-y 1s ease infinite alternate-reverse;
  }
  .scroll-text {
    margin: 0.5em 0;
  }
  
  @keyframes floating-y {
    0% {
      transform: translateY(-10%)
    }
    100% {
      transform: translateY(10%)
    }
  }
</style>
